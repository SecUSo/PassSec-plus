{
	"manifest_version":2,
	"name":"PassSec+",
	"version":"1.3.0",
  "author":"TU Darmstadt - SECUSO",
  "homepage_url":"https://www.secuso.informatik.tu-darmstadt.de/en/secuso-home/research/results/passsec/",
	"description":"PassSec+ alerts the user to enter passwords on websites where they could be compromised.",
	"default_locale": "de",
  "background":{
		"scripts":[
			"js/jquery-2.1.1.min.js",
			"js/preferences.js",
			"js/options.js",
			"background.js"
		],
    "persistent": true
	},
	"permissions":[
		"tabs",
		"<all_urls>",
		"storage"
	],
	"page_action": {
		"browser_style": true,
		"default_icon": {
			"64":"skin/logo.png"
	  },
	  "default_title": "PassSec+"
  },
	"options_ui":{
		"page": "options.html",
		"browser_style": true
	},
	"icons":{
		"64":"skin/logo.png"
	},
	"web_accessible_resources": [
		"skin/*.png"
	],
	"content_scripts":[
		{
		  "matches": [
				"<all_urls>"
		  ],
		  "css": [
		  	"css/jquery.qtip.min.css",
				"css/tooltip.css"
		  ],
		  "js": [
		  	"js/jquery-2.1.1.min.js",
		  	"js/jquery.qtip.min.js",
		  	"js/securitystatus.js",
		  	"js/firstrun.js",
		  	"js/tooltip.js",
		  	"js/texts.js",
		  	"js/inputField.js",
		  	"js/contentscript.js"
		  ],
		  "run_at": "document_idle"
		}
	]
}
