{
  "manifest_version": 2,
  "name": "PassSec+",
  "version": "1.3.0",
  "author": "TU Darmstadt - SECUSO",
  "homepage_url": "__MSG_homepageURL__",
  "description": "PassSec+ alerts the user to enter passwords on websites where they could be compromised.",
  "default_locale": "de",
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/preferences.js",
      "js/browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {
    "64": "skin/logo.png"
  },
  "web_accessible_resources": [
    "skin/*.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/jquery.qtip.min.css",
        "css/tooltip.css"
      ],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/jquery.qtip.min.js",
        "js/browser-polyfill.min.js",
        "js/securitystatus.js",
        "js/firstrun.js",
        "js/texts.js",
        "js/inputField.js",
        "js/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
